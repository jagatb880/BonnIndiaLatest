<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:layout_marginTop="15sp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="70sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="12sp"
        android:layout_weight="1.2">

        <LinearLayout
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20sp"
            android:background="@drawable/sl_no_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal"
                android:text="Sl No"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/serialNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_horizontal"
                android:text="01"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="70sp"
        android:layout_weight="9.6"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="10sp"
            android:paddingLeft="5sp"
            android:weightSum="10">

            <TextView
                android:id="@+id/billNo"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:fontFamily="@font/roboto_regular"
                android:text="Bill No #111"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/billAmount"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:fontFamily="@font/roboto_regular"
                android:text="Bill Amount #2345"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:paddingLeft="5sp"
            android:paddingTop="7sp"
            android:weightSum="10">

            <TextView
                android:id="@+id/totalTax"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:fontFamily="@font/roboto_regular"
                android:text="Total Tax #3456"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5.5">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="18sp"
                    android:src="@drawable/date" />

                <TextView
                    android:id="@+id/billDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingLeft="2sp"
                    android:text="29/08/2018"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="70sp"
        android:layout_weight="1"
        android:paddingTop="5sp">

        <TextView
            android:id="@+id/viewDetails"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/view"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>